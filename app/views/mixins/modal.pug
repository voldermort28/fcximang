mixin modal-container(obj)
  .modal.fade(
    id=obj.idModal || 'popupModal', tabindex='-1', role='dialog', aria-labelledby=obj.idModal || 'popupModal', aria-hidden='true')&attributes(attributes)
    .modal-dialog(class=obj.large && 'modal-lg', class=obj.small && 'modal-sm', class=obj.classDialog || '', class=obj.modalCenter && 'modal-dialog-centered')
      .modal-content
        .modal-header
          h5.modal-title #{obj.modalTitle || 'Popup Title'}
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          //- span.icon-close.close(data-dismiss='modal')
        .modal-body(data-modal-container)
          if block
            block
          else
            p No content provided
